<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} route=%X{camel.routeId}[%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="dk.javacon" level="DEBUG" />
	
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>